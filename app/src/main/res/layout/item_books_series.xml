<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="230dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/iv_book_series"
            android:layout_width="110dp"
            android:layout_height="170dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.bookapp.presentation.ui.base.CircleTextView
                android:id="@+id/tv_book_series_order"
                style="@style/SubBase.Bold"
                android:visibility="gone"
                tools:visibility="visible"
                android:textColor="@color/white"
                android:layout_width="16dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_book_name"
                style="@style/SubBase.Bold.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="4dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="2"
                tools:text="Наследник из Калькутты" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_book_author"
            style="@style/Secondary.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            tools:text="Роберт Штильмарк" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>